{
  "name": "mini-jotai",
  "version": "0.1.0",
  "description": "A minimal implementation of Jotai state management library for learning purposes",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
